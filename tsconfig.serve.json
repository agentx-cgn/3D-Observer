{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "app/bus.ts",
    "app/main.ts",
    "app/config.ts",
    "app/interfaces.ts",
    "app/resources/express/server.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
